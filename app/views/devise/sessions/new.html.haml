.login-body
  %article.container-login.center-block
    %section
      %ul#top-bar.nav.nav-tabs.nav-justified
        %li.active
          = link_to "Log in", user_session_path(resource_name)
        %li
          = link_to "Sign up", new_registration_path(resource_name)
      .tab-content.tabs-login.col-lg-12.col-md-12.col-sm-12.cols-xs-12
        #login-access.tab-pane.fade.active.in
          %h2
            %i.glyphicon.glyphicon-log-in
            Log In
          %form.form-horizontal
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              = errors_for resource, false
              .form-group
                = f.label :email
                %br/
                = f.email_field :email, autofocus: true, autocomplete: "email"
              .form-group
                = f.label :password
                %br/
                = f.password_field :password, autocomplete: "off"
              - if devise_mapping.rememberable?
                .form-group
                  = f.check_box :remember_me
                  = f.label :remember_me
              %br/
              .form-group
                = render "devise/shared/links"
              .form-group
                = f.submit "submit", class: 'btn btn-lg btn-block btn-primary'
